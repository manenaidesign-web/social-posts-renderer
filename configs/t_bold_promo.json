{
  "id": "t_bold_promo",
  "name": "Bold Promo Square",
  "description": "Bold design for promotions and sales",
  
  "canvas": {
    "width": 1080,
    "height": 1080,
    "backgroundColor": "transparent"
  },
  
  "layers": [
    {
      "id": "background",
      "type": "background",
      "component": "gradient",
      "props": {
        "color1": "{{primaryColor}}",
        "color2": "{{secondaryColor}}",
        "angle": 135,
        "opacity": 1
      },
      "position": { "x": 0, "y": 0 },
      "size": { "width": "100%", "height": "100%" },
      "zIndex": 0
    },
    {
      "id": "headline",
      "type": "text",
      "component": "headline",
      "props": {
        "text": "{{headline}}",
        "font": "{{fontPrimary}}",
        "fontSize": 72,
        "color": "#FFFFFF",
        "align": "center",
        "textShadow": "0 2px 8px rgba(0,0,0,0.3)",
        "fontWeight": "bold"
      },
      "position": { 
        "x": "50%", 
        "y": "45%", 
        "transform": "translate(-50%, -50%)" 
      },
      "size": { "width": "900", "height": "auto" },
      "zIndex": 2
    },
    {
      "id": "subtext",
      "type": "text",
      "component": "subtext",
      "props": {
        "text": "{{subtext}}",
        "font": "{{fontSecondary}}",
        "fontSize": 36,
        "color": "rgba(255,255,255,0.9)",
        "align": "center"
      },
      "position": { 
        "x": "50%", 
        "y": "60%", 
        "transform": "translate(-50%, -50%)" 
      },
      "size": { "width": "800", "height": "auto" },
      "zIndex": 2
    },
    {
      "id": "logo",
      "type": "image",
      "component": "logo",
      "props": {
        "src": "{{logoUrl}}"
      },
      "position": { "x": 40, "y": 940 },
      "size": { "width": 150, "height": 100 },
      "zIndex": 3
    },
    {
      "id": "decoration",
      "type": "decoration",
      "component": "circle",
      "props": {
        "color": "{{accentColor}}",
        "opacity": 0.2
      },
      "position": { "x": 900, "y": 50 },
      "size": { "width": 200, "height": 200 },
      "zIndex": 1
    }
  ],
  
  "metadata": {
    "bestFor": ["promotion", "sale", "announcement"],
    "mood": ["energetic", "bold", "urgent"],
    "complexity": "medium"
  }
}